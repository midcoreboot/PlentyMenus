<div class="modal modal-md active">
  <a href="/menu/edit/{{id}}" class="modal-overlay" aria-label="Close"></a>
  <div class="modal-container createItemModal text-center text-bold">
    <!-- modal structure here -->
    {{#if errors}}
        {{#each errors}}
            <div class="toast toast-dark mb-1">
                {{this}}
            </div>
        {{/each}}
    {{/if}}
    <div class="createItemTitle bg-primary">Edit the restaurant: </div>
    <form class="form-horizontal createItemForm"  method="POST" action="/menu/edit/restaurant/{{id}}">
        <div class="form-group">
            <div class="col-3 col-sm-12">
                <label class="form-label createItemLabel" for="restaurantName">Name of restaurant: </label>
            </div>
            <div class="col-9 col-sm-12">
                <input class="form-input" type="text" id="restaurantName" name="restaurantName" placeholder="restaurant name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-3 col-sm-12">
                <label class="form-label createItemLabel" for="restaurantDesc">Restaurant description: </label>
            </div>
            <div class="col-9 col-sm-12">
                <input class="form-input" type="text" id="restaurantDesc" name="restaurantDesc" placeholder="restaurant description">
                
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <input type="submit" id="" value="Submit edit!" class="createItemBtn btn btn-primary">
    </form>
    </div>
</div>
