<div class="modal modal-md active">
  <a href="/" class="modal-overlay" aria-label="Close"></a>
  <div class="modal-container createItemModal text-center text-bold">
    <!-- modal structure here -->
    {{#if errors}}
        {{#each errors}}
            <div class="toast toast-dark mb-1">
                {{this}}
            </div>
        {{/each}}
    {{/if}}
    <div class="createItemTitle bg-primary">Create restaurant: </div>
        <form class="form-horizontal createItemForm"  method="POST" action="/menu/create/restaurant">
        <div class="form-group">
            <div class="col-3 col-sm-12">
                <label class="form-label createItemLabel" for="rName">Name of Restaurant: </label>
            </div>
            <div class="col-9 col-sm-12">
                <input class="form-input" type="text" id="rName" name="rName" placeholder="restaurant name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-3 col-sm-12">
                <label class="form-label createItemLabel" for="rDesc">Restaurant description: </label>
            </div>
            <div class="col-9 col-sm-12">
                <input class="form-input" type="text" id="rDesc" name="rDesc" placeholder="restaurant description">
            </div>
        </div>
        <input type="submit" id="" value="Submit edit!" class="createItemBtn btn btn-primary">
        </form>


    </div>
</div>
