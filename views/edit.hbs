<div class="container bg-primary mt-2">
        <div class="menuTitle text-center text-strong">{{name}}<small class="label label-rounded ml-1 text-small">{{rating}}/100</small></div>
        <!--
        <div class="h1 menuTitle text-large text-center">
            {{name}}
        </div> -->
        <div class="menuBody columns">
            {{#each categories}}
                <div class="col-5 col-sm-12 col-mx-auto bg-dark menuCat">
                    <div class="catTitle text-center tooltip p-1" data-tooltip="{{this.desc}}">{{this.name}}
                        <small class="label label-rounded" style="font-size: 0.7rem;">
                            <a href="/additemto/{{this.id}}">Add item to category{{this.id}}.</a>
                        </small>
                        <div class="divider"></div>
                    </div>
                    {{#each this.items}}
                    <dl class="p-1">
                        <dt class="itemTitle">{{this.name}} <div style="float:right;">{{this.price}}:-</div></dt>
                        <dd class="p-2">{{this.desc}}</dd>
                    </dl>
                    {{/each}}
                </div>
            {{/each}}
            <div class="col-12">
                <a href="/add-category" class="btn btn-secondary addCat">Add Category</a>
            </div>
        </div>
</div>